<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_employee_form_add_fields" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.fiscal_and_id</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Corretto: usa un campo presente nel gruppo Citizenship -->
            <xpath expr="//field[@name='country_id']" position="after">
                <field name="fiscal_code"/>
                <field name="id_document_type"/>
                <field name="id_document_expiry"/>
            </xpath>
        </field>
    </record>
</odoo>
