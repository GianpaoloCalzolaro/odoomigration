<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form_settings_inherit" model="ir.ui.view">
        <field name="name">hr.employee.view.form.settings.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Inserisce i nuovi campi dopo il campo user_id nel tab settings -->
            <xpath expr="//page[@name='hr_settings']//field[@name='employee_type']" position="after">
                <field name="service"/>
                <field name="link"/>
            </xpath>
        </field>
    </record>
</odoo>