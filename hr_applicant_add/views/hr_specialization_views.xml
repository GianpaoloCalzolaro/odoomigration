<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree per hr.specialization -->
    <record id="hr_specialization_view_tree" model="ir.ui.view">
        <field name="name">hr.specialization.view.tree</field>
        <field name="model">hr.specialization</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="color" widget="color_picker"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vista Form per hr.specialization -->
    <record id="hr_specialization_view_form" model="ir.ui.view">
        <field name="name">hr.specialization.view.form</field>
        <field name="model">hr.specialization</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Spazio per bottoni futuri -->
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                            invisible="not active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Clinical Psychology"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="company_id" options="{'no_create': True}" 
                                   groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Detailed description of the specialization..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action per hr.specialization -->
    <record id="hr_specialization_action" model="ir.actions.act_window">
        <field name="name">Professional Specializations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.specialization</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first professional specialization
            </p>
            <p>
                Professional specializations help categorize the areas of expertise
                for your applicants and employees. They can be used to match 
                candidates with appropriate positions and track professional competencies.
            </p>
        </field>
    </record>

    <!-- Menu item per hr.specialization -->
    <!-- Menu item per hr.specialization in HR root -->
    <menuitem
        id="hr_specialization_menu"
        name="Specializations"
        parent="hr.menu_human_resources_configuration"
        action="hr_specialization_action"
        sequence="51"/>

    <!-- Menu item per hr.specialization in HR Recruitment root -->
    <menuitem
        id="hr_specialization_recruitment_menu"
        name="Specializations"
        parent="hr_recruitment.menu_hr_recruitment_configuration"
        action="hr_specialization_action"
        sequence="51"/>

</odoo>
