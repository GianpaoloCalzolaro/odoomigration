<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_applicant_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.applicant.view.form.inherit</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <!-- Personal Information Tab -->
                <page string="Personal Information" name="personal_information">
                    <group>
                        <group string="Personal Details">
                            <field name="fiscal_code"/>
                            <field name="birth_date"/>
                            <field name="birth_place"/>
                            <field name="nationality"/>
                            <field name="gender"/>
                        </group>
                        <group string="ID Document">
                            <field name="id_document_type"/>
                            <field name="id_document_number"/>
                            <field name="id_document_expiry"/>
                        </group>
                    </group>
                </page>

                <!-- Contract Information Tab -->
                <page string="Contract Information" name="contract_information">
                    <group>
                        <group string="Contract Dates">
                            <field name="contract_start_date"/>
                            <field name="contract_end_date"/>
                        </group>
                    </group>
                </page>

                <!-- Professional Information Tab -->
                <page string="Professional Information" name="professional_information">
                    <group>
                        <group string="Professional Details">
                            <field name="professional_id"/>
                            <field name="professional_order"/>
                            <field name="professional_type"/>
                            <field name="registration_date"/>
                        </group>
                        <group string="Insurance Information">
                            <field name="professional_insurance"/>
                            <field name="insurance_company" odoo='{"invisible": [["professional_insurance", "=", False]]}'/>
                            <field name="insurance_policy_number" odoo='{"invisible": [["professional_insurance", "=", False]]}'/>
                            <field name="insurance_expiry_date" odoo='{"invisible": [["professional_insurance", "=", False]]}'/>
                        </group>
                    </group>
                </page>

                <!-- Experience Tab -->
                <page string="Experience" name="experience">
                    <group>
                        <group string="Professional Experience">
                            <field name="years_experience"/>
                            <field name="specialization"/>
                            <field name="theoretical_orientation"/>
                            <field name="remote_session_experience"/>
                            <field name="specializzazioni" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="cv" widget="binary"/>
                        </group>
                        <group string="Education">
                            <field name="education_level"/>
                            <field name="university"/>
                            <field name="graduation_year"/>
                        </group>
                    </group>
                </page>

                <!-- Availability Tab -->
                <page string="Availability" name="availability">
                    <group>
                        <group string="Availability Details">
                            <field name="availability_start_date"/>
                            <field name="weekly_availability_hours"/>
                            <field name="preferred_working_days"/>
                            <field name="volunteer_activities" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                        </group>
                        <group string="Skills">
                            <field name="languages"/>
                            <field name="digital_skills"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
