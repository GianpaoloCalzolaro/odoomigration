<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_job_view_form_inherit_limite" model="ir.ui.view">
        <field name="name">hr.job.form.inherit.limite.incarichi</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='recruitment_page']/group" position="after">
                <group string="Configurazione Incarichi">
                    <field name="limite_incarichi"/>
                    <filed name="tipo_incarico" string="Tipo Incarico"
                           help="Tipo di incarico per questo ruolo. Seleziona 'Tutor' per incarichi di tutoraggio, 'Professionista' per incarichi professionali."/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_hr_job_list_inherit_custom" model="ir.ui.view">
      <field name="name">hr.job.list.inherit.custom</field>
      <field name="model">hr.job</field>
      <field name="inherit_id" ref="hr.view_hr_job_tree"/>
      <field name="mode">extension</field>
      <field name="arch" type="xml">
        <!-- Rendi la lista modificabile con aggiunta in alto -->
        <xpath expr="//list" position="attributes">
          <attribute name="editable">top</attribute>
          <attribute name="multi_edit">1</attribute>
        </xpath>
        <!-- Inserisci il campo limite_incarichi dopo department_id -->
        <xpath expr="//field[@name='department_id']" position="after">
          <field name="limite_incarichi" optional="show"/>
        </xpath>
      </field>
    </record>
</odoo>
