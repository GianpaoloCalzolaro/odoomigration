<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_survey_whatsapp_summary_wizard_form" model="ir.ui.view">
        <field name="name">survey.whatsapp.summary.wizard.form</field>
        <field name="model">survey.whatsapp.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Send Summary">
                <sheet>
                    <group>
                        <field name="total_count"/>
                        <field name="sent_count" widget="statinfo" string="Sent" options="{'icon': 'fa-check-circle'}"/>
                        <field name="error_count" widget="statinfo" string="Failed" options="{'icon': 'fa-exclamation-triangle'}"/>
                    </group>
                    <separator string="Error Details" invisible="error_count == 0"/>
                    <field name="summary_line_ids" invisible="error_count == 0">
                        <list>
                            <field name="partner_name"/>
                            <field name="mobile"/>
                            <field name="error_type"/>
                            <field name="error_message"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button string="Close" special="cancel" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
