<odoo>
    <!-- Erweiterung des Portal-Dashboards mit Notes-Button -->
    <template id="portal_my_home_inherit" inherit_id="portal.portal_my_home" name="Portal Home Inherit">
        <xpath expr="//div[@id='portal_common_category']" position="inside">
            <div class="o_portal_index_card col-md-6">
                <a href="/my/notes" class="d-flex align-items-center p-4 rounded bg-light text-decoration-none text-reset">
                    <div class="o_portal_icon me-3">
                        <img src="/portal_notes_button/static/src/notes-icon.svg" alt="Notes" loading="lazy" class="img-fluid" style="max-width: 50px;" />
                    </div>
                    <div>
                        <h6 class="mb-1">Notes</h6>
                        <p class="mb-0 text-muted">Hier k√∂nnen Notizen verwaltet werden</p>
                    </div>
                </a>
            </div>
        </xpath>
    </template>

    <!-- Portal Notes Page with Breadcrumbs and List of Notes -->
    <template id="portal_notes_page" name="Portal Notes Page">
        <t t-call="website.layout">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/my/home">My Account</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Notes</li>
                    </ol>
                </nav>
                <div class="d-flex justify-content-center">
                    <!-- Left Side with Notes -->
                    <div class="d-flex flex-column align-items-center me-4" style="width: 400px;">
                        <t t-if="notes">
                            <t t-foreach="notes" t-as="note">
                                <div class="o_portal_index_card mb-3 w-100">
                                    <a t-att-href="'/my/notes/' + str(note.id)" class="d-flex align-items-center p-4 rounded bg-light text-decoration-none text-reset">
                                        <div>
                                            <h5 class="mb-1"><t t-esc="note.title"/></h5>
                                            <p class="mb-0 text-muted"><t t-esc="note.content"/></p>
                                        </div>
                                    </a>
                                </div>
                            </t>
                        </t>
                        <t t-if="not notes">
                            <p class="text-muted">No notes available.</p>
                        </t>
                    </div>

                    <!-- Right Side with Button to Create a New Note -->
                    <div class="d-flex flex-column align-items-center ms-4" style="width: 400px;">
                        <div class="o_portal_index_card mb-3 w-100">
                            <a href="/my/notes/create" class="d-flex align-items-center p-4 rounded bg-light text-decoration-none text-reset">
                                <div>
                                    <h6 class="mb-1">Create New Note</h6>
                                    <p class="mb-0 text-muted">Add a new note here</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Create New Note Page -->
    <template id="portal_create_note" name="Create Portal Note">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2>Create a New Note</h2>
                <form action="/my/notes/save" method="post">
                    <!-- CSRF Token should be included only in POST forms -->
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required="1"/>
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Note Content</label>
                        <textarea class="form-control" id="content" name="content" rows="4" required="1"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </t>
    </template>

    <!-- Note Detail Page -->
    <template id="portal_note_detail" name="Portal Note Detail">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h1>Note Detail</h1>
                <t t-if="note">
                    <div class="mb-3">
                        <h3 class="mb-1"><t t-esc="note.title"/></h3>
                        <p><t t-esc="note.content"/></p>
                    </div>
                    <!-- Delete button to remove the note -->
                    <form action="/my/notes/delete" method="post">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="note_id" t-att-value="note.id"/>
                        <button type="submit" class="btn btn-danger">Delete Note</button>
                    </form>
                </t>
                <t t-if="not note">
                    <p class="text-muted">This note doesn't exist or you don't have permission to view it.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>
