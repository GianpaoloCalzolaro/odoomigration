<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="leap_timesheet_portal_hr_employee_views_extended" model="ir.ui.view">
        <field name="name">leap.timesheet.portal.hr.employee.views.extended</field>
        <field name="model">hr.employee</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='identification_group']" position="after">
                <group string="Own Timesheet Portal" name="leap_own_portal_user">
                    <group>
                        <field name="leap_own_portal_user"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
