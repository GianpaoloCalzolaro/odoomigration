<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="clinical_observation_list" name="Clinical Observation List">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>Osservazioni</h3>
                    <a t-attf-href="/my/patient/#{contact.id}/observations/create" class="btn btn-primary">
                        <i class="fa fa-plus"/> Nuova Osservazione
                    </a>
                </div>
                <t t-if="not observations">
                    <p>Nessuna osservazione disponibile.</p>
                </t>
                <t t-if="observations">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Autore</th>
                                <th>Posizione</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="observations" t-as="obs">
                                <tr>
                                    <td><span t-field="obs.date_created"/></td>
                                    <td><span t-field="obs.author_id"/></td>
                                    <td><span t-field="obs.author_id.employee_id.job_id.name"/></td>
                                    <td>
                                        <a t-attf-href="/my/patient/#{contact.id}/observations/#{obs.id}/edit" class="btn btn-sm btn-outline-secondary">
                                            <i class="fa fa-edit"/> Modifica
                                        </a>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div t-if="pager" class="o_portal_pager text-center">
                        <t t-call="portal.pager"/>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="clinical_observation_form" name="Clinical Observation Form">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h3 class="mb-3">Osservazione</h3>
                <form method="post" t-att-action="form_action">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="mb-3">
                        <textarea name="observation_text" class="form-control" rows="10"><t t-esc="observation.observation_text if observation else ''"/></textarea>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a t-attf-href="/my/patient/#{contact.id}/observations" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"/> Annulla
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"/> Salva
                        </button>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>
