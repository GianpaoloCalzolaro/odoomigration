<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_clinical_observation_tree" model="ir.ui.view">
        <field name="name">clinical.observation.list</field>
        <field name="model">clinical.observation</field>
        <field name="arch" type="xml">
            <list string="Clinical Observations">
                <field name="date_created"/>
                <field name="author_id"/>
                <field name="observation_text"/>
            </list>
        </field>
    </record>

    <record id="view_clinical_observation_form" model="ir.ui.view">
        <field name="name">clinical.observation.form</field>
        <field name="model">clinical.observation</field>
        <field name="arch" type="xml">
            <form string="Clinical Observation">
                <sheet>
                    <group>
                        <field name="date_created" readonly="1"/>
                        <field name="author_id" readonly="1"/>
                        <field name="observation_text" widget="text" options="{'rows': 10}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_clinical_observations" model="ir.actions.act_window">
        <field name="name">Clinical Observations</field>
        <field name="res_model">clinical.observation</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
