<odoo>
    <!-- Record Rule per hr.leave - Portal users vedono solo le proprie richieste -->
    <record id="hr_leave_portal_rule" model="ir.rule">
        <field name="name">Portal: own leaves only</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Record Rule per resource.calendar - Portal users vedono solo i propri calendari -->
    <record id="resource_calendar_portal_rule" model="ir.rule">
        <field name="name">Portal: own calendars only</field>
        <field name="model_id" ref="resource.model_resource_calendar"/>
        <field name="domain_force">['|', ('employee_creator_id', '=', False), ('employee_creator_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Manteniamo gli ACL per mail e calendar che potrebbero essere necessari -->
    <record id="access_mail_activity_type_portal" model="ir.model.access">
        <field name="name">Mail Activity Type Portal</field>
        <field name="model_id" ref="mail.model_mail_activity_type"/>
        <field name="group_id" ref="base.group_portal"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="access_mail_activity1_type_portal" model="ir.model.access">
        <field name="name">Mail Activity Portal</field>
        <field name="model_id" ref="mail.model_mail_activity"/>
        <field name="group_id" ref="base.group_portal"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="access_calendar_attendee_type_portal" model="ir.model.access">
        <field name="name">Calendar Event Attendee Portal</field>
        <field name="model_id" ref="calendar.model_calendar_attendee"/>
        <field name="group_id" ref="base.group_portal"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="access_calendar_event_type_portal" model="ir.model.access">
        <field name="name">Calendar Event Type Portal</field>
        <field name="model_id" ref="calendar.model_calendar_event"/>
        <field name="group_id" ref="base.group_portal"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
